<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:gravity="center_vertical">

    <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content" android:id="@+id/numberTextView" android:layout_weight="0"
            android:layout_marginEnd="16dp"
            tools:text="#" android:textAppearance="@style/TextAppearance.AppCompat"
            android:gravity="center_horizontal" android:layout_marginStart="4dp"/>
    <TextView
            android:id="@+id/nameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_weight="1"
            tools:text="name" android:textColor="@color/baseColor" android:textSize="14sp"
            android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
</LinearLayout>