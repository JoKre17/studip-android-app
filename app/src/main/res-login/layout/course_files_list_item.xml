<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center_vertical">

    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp" android:id="@+id/typeImageView"
            android:layout_weight="0" android:layout_margin="8dp" tools:srcCompat="@drawable/ic_document"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameTextView" android:layout_weight="1"
            tools:text="Altklausuren"/>
    <Button
            android:id="@+id/downloadButton" android:layout_weight="0"
            android:background="@android:drawable/stat_sys_download" android:layout_width="30dp"
            android:layout_height="30dp" android:backgroundTint="@color/baseGreyLighter4" android:layout_margin="8dp"/>
</LinearLayout>