<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:orientation="vertical"
              android:gravity="center_horizontal" android:padding="30dp">

    <TextView
            android:text="@string/about_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textAppearance="@style/TextAppearance.AppCompat"
            android:lineSpacingExtra="10sp" android:id="@+id/aboutInfoTextView"
            app:layout_constraintBottom_toTopOf="@+id/aboutContactTextView" android:paddingBottom="40dp"/>
    <TextView
            android:text="@string/about_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:lineSpacingExtra="10sp" android:id="@+id/aboutContactTextView"
            app:layout_constraintBottom_toTopOf="@+id/aboutContactDetailsTextView"
            app:layout_constraintTop_toBottomOf="@+id/aboutInfoTextView" android:paddingBottom="40dp"/>
    <TextView
            android:text="@string/about_contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:lineSpacingExtra="10sp" android:id="@+id/aboutContactDetailsTextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutContactTextView"/>
</LinearLayout>